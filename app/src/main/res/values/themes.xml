<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentAVan" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_radical</item>
        <item name="colorPrimaryVariant">@color/red_radical</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_surface</item>
        <item name="colorSecondaryVariant">@color/red_surface</item>
        <item name="colorOnSecondary">@color/red_monarch</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here.
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item> -->
        <item name="colorSurface">@color/white</item>
        <item name="colorAccent">@color/red_radical</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="BottomNavBar">
        <item name="colorSecondaryContainer">?colorSecondary</item>
    </style>
</resources>